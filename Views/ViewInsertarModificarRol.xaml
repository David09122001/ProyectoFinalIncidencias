<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.ViewInsertarModificarRol"
             Title="Insertar/Modificar Rol"
             BackgroundColor="#F9FAFB">
    <Grid RowDefinitions="Auto, *, Auto" Padding="20" RowSpacing="15">
        <!-- Título -->
        <Label Grid.Row="0"
               Text="Gestión de Permisos"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2C3E50" />

        <!-- Contenido principal -->
        <VerticalStackLayout Grid.Row="1" Spacing="15">
            <!-- Nombre del Rol -->
            <Frame BackgroundColor="White" CornerRadius="15" Padding="10" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Nombre del Rol" FontAttributes="Bold" TextColor="#2C3E50" />
                    <Entry Placeholder="Introduce el nombre del rol"
                           Text="{Binding RolSeleccionado.nombre, Mode=TwoWay}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Lista de Permisos (con altura limitada) -->
            <Label Text="Permisos" FontAttributes="Bold" TextColor="#2C3E50" />
            <CollectionView ItemsSource="{Binding PermisosDisponibles}" SelectionMode="None" HeightRequest="400">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White" CornerRadius="15" Padding="10" Margin="0,5" HasShadow="True">
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Nombre del Permiso -->
                                <Label Text="{Binding descripcion}" FontSize="18" VerticalOptions="Center" TextColor="#2C3E50" />

                                <!-- Botón Asignar/Quitar -->
                                <Button Text="Asignar"
                                        FontAttributes="Bold"
                                        CornerRadius="10"
                                        Clicked="OnPermisoClicked"
                                        Grid.Column="1"
                                        Padding="10,5"
                                        WidthRequest="120"
                                        HeightRequest="40"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding IsAssigned}" Value="True">
                                            <Setter Property="Text" Value="Quitar" />
                                            <Setter Property="BackgroundColor" Value="#4CAF50" />
                                            <Setter Property="TextColor" Value="White" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button" Binding="{Binding IsAssigned}" Value="False">
                                            <Setter Property="Text" Value="Asignar" />
                                            <Setter Property="BackgroundColor" Value="#9E9E9E" />
                                            <Setter Property="TextColor" Value="White" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Botones (siempre visibles) -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="Guardar" FontAttributes="Bold" Clicked="OnGuardarClicked" Style="{StaticResource PrimaryButtonStyle}" />
            <Button Text="Cancelar" FontAttributes="Bold" Clicked="OnCancelarClicked" Style="{StaticResource SecondaryButtonStyle}" />
        </StackLayout>
    </Grid>
</ContentPage>
