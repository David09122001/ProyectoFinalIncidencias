<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.ViewLogs"
             Title="Ver Logs"
             BackgroundColor="#F8F9FA">

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- TÃ­tulo -->
        <Label Text="Historial de Logs"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="#2C3E50"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <!-- Filtro -->
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Entry Placeholder="Filtrar por ID de incidencia"
                   Keyboard="Numeric"
                   Text="{Binding FiltroIncidenciaId}"
                   WidthRequest="250"
                   HeightRequest="40"
                   BackgroundColor="White"
                   HorizontalTextAlignment="Center" />
            <Button Text="Filtrar"
                    Command="{Binding FiltrarCommand}"
                    WidthRequest="100"
                    HeightRequest="40"
                    BackgroundColor="#1E88E5"
                    TextColor="White"/>
            <Button Text="Borrar Filtro"
                    Command="{Binding BorrarFiltroCommand}"
                    WidthRequest="120"
                    HeightRequest="40"
                    BackgroundColor="#B0BEC5"
                    TextColor="White"/>
        </HorizontalStackLayout>

        <!-- Tabla de Logs -->
        <Grid ColumnSpacing="1" RowSpacing="1" BackgroundColor="#E0E0E0" Margin="0,20,0,0">
            <!-- Cabecera -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="ID de Incidencia"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   BackgroundColor="#1E88E5"
                   Padding="10,5"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Grid.Row="0" Grid.Column="0" />
            <Label Text="Estado"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   BackgroundColor="#1E88E5"
                   Padding="10,5"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Grid.Row="0" Grid.Column="1" />
            <Label Text="Fecha"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   BackgroundColor="#1E88E5"
                   Padding="10,5"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Grid.Row="0" Grid.Column="2" />

            <!-- Datos -->
            <CollectionView ItemsSource="{Binding Logs}" Grid.Row="1" Grid.ColumnSpan="3">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnSpacing="1" RowSpacing="1" BackgroundColor="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding incidenciaId, StringFormat='ID: {0}'}"
                                   FontSize="16"
                                   TextColor="#34495E"
                                   Padding="10,5"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   Grid.Column="0" />
                            <Label Text="{Binding estado, StringFormat='Estado: {0}'}"
                                   FontSize="16"
                                   TextColor="#34495E"
                                   Padding="10,5"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   Grid.Column="1" />
                            <Label Text="{Binding fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                   FontSize="16"
                                   TextColor="#34495E"
                                   Padding="10,5"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   Grid.Column="2" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
