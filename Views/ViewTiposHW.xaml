<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.ViewTiposHW"
             Title="Gestión de Tipos de Hardware"
             BackgroundColor="#F5F6F8">
    <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center" VerticalOptions="FillAndExpand">
        <!-- Título -->
        <Label Text="Gestión de Tipos de Hardware" 
               FontSize="30" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="#2C3E50" />

        <!-- Barra de búsqueda -->
        <Frame BackgroundColor="White" CornerRadius="15" Padding="0" HasShadow="True" WidthRequest="800" HeightRequest="60" HorizontalOptions="Center">
            <Grid Padding="10" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="lupa.png" 
               WidthRequest="30" 
               HeightRequest="30" 
               VerticalOptions="Center" 
               Grid.Column="0" />

                <Entry Placeholder="Buscar tipo de hardware..." 
               Text="{Binding TextoBusqueda, Mode=TwoWay}" 
               FontSize="18" 
               BackgroundColor="Transparent"
               VerticalOptions="Center"
               Grid.Column="1" />
            </Grid>
        </Frame>




        <Frame BackgroundColor="White" CornerRadius="20" Padding="15" HasShadow="True" WidthRequest="800">
            <ScrollView>
                <CollectionView ItemsSource="{Binding TiposFiltrados}" SelectionMode="Single"
                                HeightRequest="300">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Nombre del tipo -->
                                <Label Text="{Binding dispositivo}" FontSize="18" VerticalOptions="Center" />

                                <!-- Botón Modificar -->
                                <Button Text="Modificar"
                                        Style="{StaticResource ModifyButtonStyle}"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnModificarClicked"
                                        Grid.Column="1" />

                                <!-- Botón Eliminar -->
                                <Button Text="Eliminar"
                                        Style="{StaticResource DeleteButtonStyle}"
                                        CommandParameter="{Binding .}"
                                        Clicked="OnEliminarClicked"
                                        Grid.Column="2" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Frame>

        <!-- Formulario para añadir tipos -->
        <Frame BackgroundColor="White" CornerRadius="20" Padding="15" HasShadow="True" WidthRequest="800">
            <VerticalStackLayout Spacing="10">
                <Label Text="Nombre del Tipo de Hardware" FontAttributes="Bold" TextColor="#34495E" />
                <Entry Placeholder="Ejemplo: Router" Text="{Binding NombreTipo}" />

                <!-- Botón Guardar -->
                <Button Text="Guardar" Clicked="OnGuardarClicked" Style="{StaticResource PrimaryButtonStyle}" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
