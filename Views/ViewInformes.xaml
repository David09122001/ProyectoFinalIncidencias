<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.ViewInformes"
             Title="Generar Informe"
             BackgroundColor="#F8F9FA">

    <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">
        <!-- Título -->
        <Label Text="Generar Informe de Incidencias"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#2C3E50"
               HorizontalOptions="Center" />

        <!-- Botón para generar informe -->
        <Button Text="Generar Informe PDF"
                Command="{Binding GenerarInformeCommand}"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
