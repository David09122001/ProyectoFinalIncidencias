<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.Profesores"
             Title="Gestión de Profesores">
    <StackLayout Padding="10">
        <Label Text="Gestión de Profesores" FontSize="Large" HorizontalOptions="Center" />

        <!-- ListView para profesores -->
        <ListView x:Name="ProfesoresListView" Margin="0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nombre}" Detail="{Binding Departamento.Nombre}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Botones de acción -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button Text="Agregar" />
            <Button Text="Editar" IsEnabled="{Binding HaySeleccion}" />
            <Button Text="Eliminar" IsEnabled="{Binding HaySeleccion}" />
        </StackLayout>
    </StackLayout>
</ContentPage>
