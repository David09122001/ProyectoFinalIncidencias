<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.ProfesorMenu"
             Title="MENÚ PRINCIPAL"
             BackgroundColor="#F8F9FA">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="CONFIGURACIÓN"
                    IconImageSource="login.png"
                    Clicked="OnOpcionesClicked" />
    </ContentPage.ToolbarItems>
    <!-- Contenedor principal -->
    <Grid>
        <!-- Contenido del menú principal -->
        <VerticalStackLayout Padding="20">
            <!-- Mensaje de bienvenida -->
            <Label Text="{Binding MensajeBienvenida}" 
                  FontSize="28" 
                  FontAttributes="Bold" 
                  HorizontalOptions="Center" 
                  TextColor="#1E88E5" 
                  Margin="0,20,0,40" />

            <!-- Grid de opciones del menú -->
            <Grid Padding="20" RowSpacing="20" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Gestión de Incidencias -->
                <Frame Grid.Row="0" Grid.Column="0" Style="{StaticResource ModernCardStyle}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="incidencias.png" WidthRequest="50" HeightRequest="50" />
                        <Label Text="Gestión de Incidencias" Style="{StaticResource CardLabelStyle}" />
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="IncidenciasTapped" />
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited" />
                    </Frame.GestureRecognizers>
                </Frame>

              
            </Grid>
        </VerticalStackLayout>
        <Frame x:Name="DropdownMenu"
        IsVisible="False"
        BackgroundColor="White"
        CornerRadius="10"
        HasShadow="True"
        Padding="10"
        WidthRequest="200"
        HorizontalOptions="End"
        VerticalOptions="Start"
        Margin="0,00,20,0">
            <StackLayout>
                <Label Text="Perfil"
                Padding="10">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPerfilTapped" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Cerrar sesión"
                Padding="10">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCerrarSesionTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>