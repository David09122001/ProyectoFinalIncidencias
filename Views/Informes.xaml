<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecteFinal.Views.Informes"
             Title="Generación de Informes">
    <StackLayout Padding="10">
        <Label Text="Generación de Informes" FontSize="Large" HorizontalOptions="Center" />

        <!-- Controles para filtros -->
        <StackLayout Orientation="Vertical" Spacing="10">
            <Entry Placeholder="Rango de fechas (ej. 01/01/2024 - 31/01/2024)" />
            <Picker Title="Tipo de HW" />
            <Picker Title="Departamento" />
        </StackLayout>

        <!-- Botón para generar informe -->
        <Button Text="Generar Informe" BackgroundColor="#007ACC" TextColor="White" Margin="0,10" />

        <!-- Resultados -->
        <ListView x:Name="ResultadosListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Titulo}" Detail="{Binding Detalle}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
